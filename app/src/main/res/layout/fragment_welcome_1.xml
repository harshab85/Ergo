<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uoftprojects.ergo.SignUpScreens.SetUpTabbedActivity$PlaceholderFragment"
    android:background="@color/firstScreen">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Hello!"
    android:layout_gravity="center_horizontal|top"
    android:textSize="55dp"
    android:autoText="false"
    android:radius="14dp"
    android:typeface="normal"
    android:id="@+id/TitleMessage"
    android:textColor="@android:color/white"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:elevation="25dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introductionText"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:layout_below="@+id/TitleMessage"
        android:layout_alignParentRight="true"
        android:elevation="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="74dp"
        android:textSize="18dp"
        android:background="@drawable/rounded_corners" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/ergointroimage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/TitleMessage"
        android:layout_toEndOf="@+id/TitleMessage"
        android:src="@drawable/ergoarrow"
        android:layout_alignTop="@+id/imageView" />

</RelativeLayout>
