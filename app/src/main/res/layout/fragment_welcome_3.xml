<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uoftprojects.ergo.SignUpScreens.SetUpTabbedActivity$PlaceholderFragment3"
    android:background="@color/secondScreen"
    android:id="@+id/third">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introduction3Text"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:textSize="18dp"
        android:elevation="10dp"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:singleLine="false"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/button"
        android:text="Start Tutorial"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:elevation="10dp"
        android:onClick ="openVideoLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:elevation="10dp"
        android:background="@drawable/rounded_corners"

        android:textColor="#ff000000" />

</RelativeLayout>
